#!/usr/bin/env bash
# -*- bash -*-
#
#
action="$1"
shift

set -u -e -o pipefail

BIN=/apps/bash_setup/bin
function git_is_clean {
    if ! git_repo_is_clean
    then
      echo -e "\n!!! GIT repo not clean enough.\n" 1>&2
      exit 1
    fi
}


case "$action" in

  "help")
    echo " ====================================================="
    echo ""
    echo " $ bash_setup bump current"
    echo " $ bash_setup bump major"
    echo " $ bash_setup bump minor"
    echo " $ bash_setup bump patch"
    echo " $ bash_setup bump_and_commit  major|minor|patch"
    echo ""
    echo " $ bash_setup delete_ssh_key   name"
    echo ""
    echo " $ bash_setup ssh_key          name   [name.com]"
    echo " $ bash_setup ssh_key          name   domain.something"
    echo ""
    echo " $ bash_setup o-x              dir  # === make bin files non-executable for others"
    echo ""
    echo " ====================================================="
    echo ""
    exit 0
    ;;

  "bump")
    if [[ -z "$(which bump)" ]]; then
      echo "!!! install rubygem: gem install bump"
      exit 1
    fi
    if [[ "$1" != "current" ]]; then
      git_is_clean
      echo -e "=== Bumping from: $(bump current)\n"
    fi
    bump $1 --no-commit --no-bundle
    ;;

  "bump_and_commit")
    bash_setup bump "$1"
    VER=$(cat VERSION)

    git_update
    git commit -m   "Bump: $VER"
    git tag         "v$VER"
    ;;

  "bump_commit_push")
    bash_setup bump_and_commit "$@"
    git push origin "v$(cat VERSION)"
    ;;

  "delete_ssh_key")
    set -x
    rm -f ~/.ssh/keys/$1
    rm -f ~/.ssh/keys/$1.pub
    ;;

  "ssh_key")
    name="$1"
    shift

    if [[ -z "$@" ]]; then
      domain="${name}.com"
    else
      domain="$1"
    fi

    file="$HOME/.ssh/keys/$name"

    if ! ( which xclip ) ; then
      echo -e "\n=== Installing xclip:"
      sudo apt-get install xclip
      echo ""
    fi

    ssh-keygen -t rsa -b 4096 -f $HOME/.ssh/keys/$name

    echo ""
    echo "=== Adding key to ssh-agent:"
    ssh-add $file

    xclip -sel clip < "${file}.pub"
    echo "=== publiv key copied to clipboard"

    echo ""
    echo "=== test it w/: ssh -T git@$domain"
    ;;

  "o-x")
    dir="$1"

    chmod o-x $dir/*/bin/*
    for x in $dir/*/bin; do
      echo "=== $x"
      ls -l $x
      echo ""
    done
    ;;

  *)
    echo "Unknown option: $action" 1>&2
    exit 1
    ;;

esac


