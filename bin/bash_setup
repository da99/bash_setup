#!/usr/bin/env bash
# -*- bash -*-
#
#
action="$1"
shift

set -u -e -o pipefail

BIN=/apps/bash_setup/bin
function git_is_clean {
    if ! git_repo_is_clean
    then
      echo -e "\n!!! GIT repo not clean enough.\n" 1>&2
      exit 1
    fi
}


case "$action" in

  "help")
    echo " ====================================================="
    echo " $ bash_setup push_tag"
    echo ""
    echo " $ bash_setup bump current"
    echo " $ bash_setup bump major"
    echo " $ bash_setup bump minor"
    echo " $ bash_setup bump patch"
    echo " $ bash_setup bump_and_commit_and_tag_and_push"
    echo " ====================================================="
    echo ""
    exit 0
    ;;

  "bump")
    if [[ "$1" != "current" ]]; then
      git_is_clean
      echo -e "=== Bumping from: $(bump current)\n"
    fi
    bump $1 --no-commit --no-bundle
    ;;

  "push_tag")
    VER=$(cat VERSION)
    git push origin "v$VER"
    ;;

  "bump_and_commit_and_tag_and_push")
    git push
    bash_setup bump "$1"
    VER=$(cat VERSION)

    git_update
    git commit -m   "Bump: $VER"
    git tag         "v$VER"
    bash_setup push_tag
    git push
    ;;


  *)
    echo "Unknown option: $action" 1>&2
    exit 1
    ;;

esac


